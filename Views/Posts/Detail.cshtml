@model Post;

<div class="col-12">
    <div class="d-flex align-items-center">
        <h1>Dettaglio post:</h1>
    </div>
    <div>
        <img src="@Model.Image" />
     
    </div>
    <p>
        <strong>Titolo:</strong>@Model.Title
    </p>
    <p>
        <strong>Contenuto:</strong>@Model.Description
    </p>
    <p>
        <strong>Nome categoria:</strong>@Model.Category.Name
    </p>

    <p>
        <strong>Tags:</strong>
        @foreach (Tag tag in Model.Tags)
        {
            <div>
                <label>
                    @tag.Title
                </label>
            </div>
        }
    </p>
</div>